package com.pixelbreaker.structures {	/**	 * @author Gabriel Bucknall	 */	public class ARGB 	{		public var a:int;		public var r:int;		public var g:int;		public var b:int;				public function ARGB( hex:uint = 0xFF000000 )		{			a = hex >> 24 & 0xFF;			r = hex >> 16 & 0xFF;			g = hex >> 8 & 0xFF;			b = hex & 0xFF;					}				public function getHex():uint		{			return ( a << 24 | r << 16 | g << 8 | b );		}				public function concat( n:ARGB ):void		{			var alpha:Number = n.a / 255;						r -= ( r - n.r ) * alpha;			g -= ( g - n.g ) * alpha;			b -= ( b - n.b ) * alpha;		}		public function clone():ARGB		{			return new ARGB( getHex() );			}	}}