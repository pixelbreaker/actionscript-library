package com.pixelbreaker.application {	import flash.display.Stage;		/**	 * @author Gabriel Bucknall-Mak (gabriel@pixelbreaker.com)	 */	public class ApplicationConfig 	{		protected static const			PATH_DEV:String = '.dev',			PATH_LOCAL:String = 'file://',			PATH_STAGING:String = 'staging.';					public static const			MODE_DEV:String = 'development',			MODE_STAGING:String = 'staging',			MODE_LIVE:String = 'live';				private var			_stage:Stage;					public var			mode:String;				public function ApplicationConfig()		{			super();		}				public function init( stage:Stage ):void		{			_stage = stage;						var url:String = _stage.loaderInfo.url;						if( url.indexOf( PATH_DEV ) != -1  || url.indexOf( PATH_LOCAL ) != -1 )				mode = MODE_DEV;			else if( url.indexOf( PATH_STAGING ) != -1 )				mode = MODE_STAGING;			else				mode = MODE_LIVE;		}	}}